---
import { twMerge } from "tailwind-merge";
type Props<T extends keyof astroHTML.JSX.DefinedIntrinsicElements = "a"> = {
  as?: T;
  class?: string;
} & Omit<astroHTML.JSX.DefinedIntrinsicElements[T], "slot">;

const { as: Tag = "a", class: className, ...props } = Astro.props;
---

<Tag
  class={twMerge(
    "rounded-2xl bg-white transition-colors ease-out-expo duration-300 hover:bg-gray-6 active:bg-accent py-2 px-2.5 flex items-center gap-2 text-caption focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2",
    className
  )}
  {...props}
>
  <slot />
</Tag>
