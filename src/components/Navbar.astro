---
import Button from "./Button.astro";
import Card from "./Card.astro";
import IconBack from "./IconBack.astro";
---

<nav class="flex gap-1 animate-slide-in opacity-0">
  <Button as="a" href="/" class="py-1 pl-1 group">
    <div
      class="bg-accent flex items-center justify-center rounded-full h-7 w-7 group-active:bg-white transition-colors ease-out-expo duration-300"
    >
      <IconBack />
    </div>
    back
  </Button>
  <Card class="py-2 px-2 grow bg-gray-2" />
</nav>
