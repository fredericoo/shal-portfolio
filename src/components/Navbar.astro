---
import Button from "./Button.astro";
import Card from "./Card.astro";
import IconEmail from "./IconEmail.astro";
import IconExternal from "./IconExternal.astro";

const shouldShowBack = Astro.url.pathname !== "/";
---

<nav class="flex gap-1 animate-slide-in opacity-0">
  {
    shouldShowBack && (
      <Button as="a" href="/" class="py-1 pl-1">
        <div class="bg-accent rounded-full h-7 w-7" />
        portfolio
      </Button>
    )
  }
  <Card class="py-2 px-2 grow" />
  <Button as="a" href="https://instagram.com/laraluzr">
    instagram <IconExternal />
  </Button>
  <Button as="div">
    <IconEmail />
    <span class="text-gray-10">laraluzreis@gmail.com</span>
  </Button>
</nav>
