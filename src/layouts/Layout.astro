---
import Footer from "~/components/Footer.astro";

type Props = {
  title?: string;
  ogImageSrc?: string;
  ogDescription?: string;
};

const { title, ogDescription, ogImageSrc } = Astro.props;

const SITE_NAME = "lara reis";
const pageTitle = title
  ? `${SITE_NAME} âœ¦ ${title.toLocaleLowerCase()}`
  : SITE_NAME;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#ffffff" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    {!!ogDescription && <meta property="description" content={ogDescription} />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={pageTitle} />
    {
      !!ogDescription && (
        <meta property="og:description" content={ogDescription} />
      )
    }
    {!!ogImageSrc && <meta property="og:image" content={ogImageSrc} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={pageTitle} />
    {
      !!ogDescription && (
        <meta property="twitter:description" content={ogDescription} />
      )
    }
    {!!ogImageSrc && <meta property="twitter:image" content={ogImageSrc} />}

    <link
      rel="preload"
      href="/fonts/neuemontreal-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body
    class="bg-gray-3 text-gray-12 py-4 md:py-16 xl:py-32 font-body flex flex-col gap-1"
  >
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "neue-montreal";
    src: url("/fonts/neuemontreal-bold.woff2") format("woff2");
    font-weight: 700;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "neue-montreal";
    src: url("/fonts/neuemontreal-medium.woff2") format("woff2");
    font-weight: 500;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "neue-montreal";
    src: url("/fonts/neuemontreal-regular.woff2") format("woff2");
    font-weight: 400;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "Arial";
    src: local("Arial");
    ascent-override: 98%;
    descent-override: 16%;
    line-gap-override: 7%;
    advance-override: 10;
  }
</style>
