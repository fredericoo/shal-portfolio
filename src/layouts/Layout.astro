---
import Footer from "~/components/Footer.astro";

type Props = {
  title?: string;
  ogImageSrc?: string;
};

const { title, ogImageSrc } = Astro.props;

const SITE_NAME = "lara reis";
const pageTitle = title ? `${title} âœ¦ ${SITE_NAME}` : SITE_NAME;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    {!!ogImageSrc && <meta property="og:image" content={ogImageSrc} />}
    <link
      rel="preload"
      href="/fonts/neuemontreal-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <title>{pageTitle}</title>
  </head>
  <body
    class="bg-gray-3 text-gray-12 py-4 md:py-16 xl:py-32 font-body flex flex-col gap-1"
  >
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "neue-montreal";
    src: url("/fonts/neuemontreal-bold.woff2") format("woff2");
    font-weight: 700;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "neue-montreal";
    src: url("/fonts/neuemontreal-medium.woff2") format("woff2");
    font-weight: 500;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "neue-montreal";
    src: url("/fonts/neuemontreal-regular.woff2") format("woff2");
    font-weight: 400;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "Arial";
    src: local("Arial");
    ascent-override: 98%;
    descent-override: 16%;
    line-gap-override: 7%;
    advance-override: 10;
  }
</style>
